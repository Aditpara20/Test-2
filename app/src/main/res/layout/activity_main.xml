<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffff">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/navColor"
        app:itemIconTint="#ffff"
        app:itemTextColor="#ffff"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/navlogo">
            </ImageView>

            <Button
                android:id="@+id/keranjangBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="25px"
                android:background="@drawable/keranjang"></Button>


            <Button
                android:id="@+id/btnLogout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25px"
                android:layout_weight="1"
                android:background="@drawable/common_full_open_on_phone"></Button>


        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar2"
            android:layout_marginTop="0dp"
            android:background="#EFECEC"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnKategoriTanaman"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/plant"></Button>

                <Button
                    android:id="@+id/btnKategoriPupuk"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/pupuk">

                </Button>

                <Button
                    android:id="@+id/btnKategoriPot"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/pot"></Button>
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="110dp"
                android:src="@drawable/g2"></ImageView>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="310dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Fitur"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#000"
                android:fontFamily="sans-serif">
            </TextView>
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="360dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnPlan"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/navColor"
            android:text="Plant"
            android:textColor="#fff">

        </Button>

        <Button
            android:id="@+id/btnGreen"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/navColor"
            android:text="Green"
            android:textColor="#fff"></Button>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/container_fragment_nav"
        android:layout_width="match_parent"
        android:layout_above="@+id/navigation_above"
        android:layout_height="match_parent">
    </FrameLayout>
</RelativeLayout>




